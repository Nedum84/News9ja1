<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsListWrapper"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#94000000"
    android:padding="10dp"
    android:layout_marginBottom="1px"
    android:orientation="vertical">

    <ImageView
        app:srcCompat="@drawable/ic_menu_gallery"
        android:id="@+id/headlineNewsImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/headlineNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Introduction to the physical to the physical to the physical to the physical " />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            app:srcCompat="@drawable/ic_menu_gallery"
            android:id="@+id/newsSourceIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/headlineNewsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ddd"
            android:textSize="13sp"
            android:textStyle="italic"
            android:text="sunnewsonline.com"/>
        <TextView
            android:id="@+id/headlineNewsCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:visibility="gone"
            android:text=" | Politics"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            app:srcCompat="@drawable/ic_access_time_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" />
        <TextView
            android:id="@+id/headlineNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#eee"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:text="Feb 12, 2019" />
        <ImageView
            app:srcCompat="@drawable/ic_comment_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" />
        <TextView
            android:id="@+id/headlineNewsNoOfViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#eee"
            android:text="2313" />
        <ImageView
            android:id="@+id/headlineNewsBookmarkStatus"
            app:srcCompat="@drawable/ic_bookmark_border_black_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp" />
        <ImageView
            android:id="@+id/headlineNewsHide"
            app:srcCompat="@drawable/ic_clear_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>