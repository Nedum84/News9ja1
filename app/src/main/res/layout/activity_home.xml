<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/l_and_q_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".ActivityHome"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_horizontal"
            android:background="?attr/colorPrimary"
            app:title=" "
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:id="@+id/drer"
                android:layout_width="40dp"
                app:srcCompat="@drawable/ic_wifi_tethering_black_24dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#eee"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="9ja News Update"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/testImgBitmap"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_bookmark_border_black_24dp"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TabLayout
            android:id="@+id/news_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cdcdcd"
            app:tabTextColor="#616161"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabGravity="fill"
            app:tabRippleColor="#bdbdbd"
            app:tabIndicatorAnimationDuration="200"
            app:tabSelectedTextColor="#212121"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabIndicatorHeight="4dp"
            app:tabMode="scrollable"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


</LinearLayout>