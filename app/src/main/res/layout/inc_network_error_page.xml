<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/nwErrorPageWrapper"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_cloud_off_black_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="No network connection"/>
    <LinearLayout
        android:id="@+id/refreshPageFromNw"
        android:layout_width="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:background="@drawable/design_border_round_for_nw"
        android:gravity="center_vertical"
        android:padding="7dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_autorenew_black_24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Reload this page"/>
    </LinearLayout>
</LinearLayout>